<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/layout_story"
        android:layout_width="@dimen/dimen_195_dip"
        android:layout_height="@dimen/dimen_130_dip"
        android:layout_gravity="center"
        android:background="@drawable/chengyugushi"
        />
    <TextView
        android:id="@+id/text_story_type_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="专辑分类"
        android:textSize="@dimen/dimen_16_dip"
        android:textColor="#F49F10"
        />
</LinearLayout>
